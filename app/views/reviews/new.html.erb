<section id="content" class="container">

  <%= simple_form_for [@product, @review], url: product_reviews_path(@product), local: true, format: :turbo_stream do |form| %>
    <div class="form-container">
      <div class="info">
         <h1>Review the Booking</h1>
      </div>

      <div class="mb-3">
        <%= form.input :rating, label: "Rating", label_html: { class: "form-label" }, input_html: { class: "form-control", min: 0, max: 5 } %>
      </div>

      <div class="mb-3">
        <%= form.input :content, label: "Content", label_html: { class: "form-label" }, input_html: { class: "form-control" } %>
      </div>

      <div class="upload-button">
        <%= form.button :submit, 'Submit Review', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</section>
