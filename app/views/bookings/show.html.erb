<div class="product-show-container">
  <h1>Booking Details</h1>

  <p><strong>Status:</strong> <%= @booking.status.capitalize %></p>
  <p><strong>Start Date:</strong> <%= @booking.start_date %></p>
  <p><strong>End Date:</strong> <%= @booking.end_date %></p>
  <p><strong>Product:</strong> <%= link_to @booking.product.title, product_path(@booking.product) %></p>
  <p><strong>Accepted by:</strong> <%= @booking.product.user.full_name %></p>

  <h2>Reviews</h2>

<h1>Review Details</h1>

  <% if @reviews.any? %>
    <ul>
      <% @reviews.each do |review| %>
        <li>
          <%= "Review From: #{review.user.full_name}" %><br><br>
          <%= "Product Rating: #{review.product_rating}" %><br><br>
          <%= "Product Content: #{review.product_content}" %><br><br>
          <%= "Booking Rating: #{review.booking_rating}" %><br><br>
          <%= "Booking Content: #{review.booking_content}" %><br><br>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No reviews for this booking yet.</p>
  <% end %>

  <div class="btn">
    <%= link_to 'Back to Bookings', borrows_bookings_path(@product), class: 'btn btn-secondary' %>
  </div>
</div>

<script>
  // Timeout for notice alert
  var noticeAlert = document.getElementById('notice-alert');
  if (noticeAlert) {
    setTimeout(function() {
      noticeAlert.style.display = 'none';
    }, 3000);
  }

  // Timeout for alert alert
  var alertAlert = document.getElementById('alert-alert');
  if (alertAlert) {
    setTimeout(function() {
      alertAlert.style.display = 'none';
    }, 3000);
  }
</script>
