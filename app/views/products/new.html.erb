<section id=container>

<div class="form-container">
<div class="info">
<h1>Product information</h1>
</div>
<%= form_for @product, html: { multipart: true } do |f| %>

  <div class="mb-3">
    <%= f.label :image, class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-row">
    <div class="mb-3 form-group category">
      <%= f.label :category_id, class: "form-label" %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, { class: "form-control" } %>
    </div>

    <div class="mb-3 form-group condition">
      <%= f.label :condition, class: "form-label" %>
        <%= f.select :condition,
               options_for_select([
                   ["New - Never used before", "New"],
                   ["As new - In perfect conditions", "As new"],
                   ["Good state - Well preserved", "Good state"],
                   ["Acceptable - Worth the price", "Acceptable"],
                   ["Very used - Deteriorated but functional", "Very used"]
                 ]), {}, { class: "form-control" } %>
      </div>

    <div class="mb-3 form-group price">
      <%= f.label :price_per_day, value: "Price/day â‚¬", class: "form-label" %>
      <%= f.number_field :price_per_day, class: "form-control", step: "0.01" %>
    </div>
</div>

  <div class="upload-button">
  <%= f.submit "Upload Product", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
</section>
